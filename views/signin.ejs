<html>
	<head>
		<title>登录</title>
		<link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
		<link href="/stylesheets/signin.css" rel="stylesheet">
		<script src="/javascripts/jquery.js" type="text/javascript"></script>
		<script src="/javascripts/bootstrap.js" type="text/javascript"></script>
		<script src="/javascripts/signin.js" type="text/javascript"></script>
	</head>
    <body>
		<h2 class="form-signin-heading">欢迎使用在线考试系统</h2>
		<div class="panel panel-default panel-signin">
			<ul id="myTab" class="nav nav-tabs" role="tablist">
				<li role="presentation" class="active"><a href="#stusign">学生登录</a></li>
				<li role="presentation"><a href="#tearegister">学生注册</a></li>
				<li role="presentation"><a href="#teasign">教师登录</a></li>
			</ul>
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="stusign">
					<form class="form-horizontal form-signin" role="form">
						<div class="form-group">
							<label for="inputNumber" class="col-sm-3 control-label">学&nbsp;&nbsp;号</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" id="inputNumber" placeholder="请输入用户名">
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword3" class="col-sm-3 control-label">密&nbsp;&nbsp;码</label>
							<div class="col-sm-9">
								<input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码">
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-6 col-md-offset-3">
								<button type="button" class="btn btn-primary btn-block">登&nbsp;&nbsp;录</button>
							</div>
						</div>
					</form>
				</div>
				<div role="tabpanel" class="tab-pane" id="tearegister">
					<form class="form-horizontal form-signin" role="form">
						<div class="form-group">
							<label for="inputNumber" class="col-sm-3 control-label">学&nbsp;&nbsp;号</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" id="inputNumber" placeholder="请输入用户名">
							</div>
						</div>
						<div class="form-group">
							<label for="inputUsername" class="col-sm-3 control-label">姓&nbsp;&nbsp;名</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" id="inputUsername" placeholder="请输入姓名">
							</div>
						</div>
						<div class="form-group">
							<label for="inputUsername" class="col-sm-3 control-label">姓&nbsp;&nbsp;名</label>
							<div class="col-sm-9">
								<select class="form-control">
									<option>12级软件1班</option>
									<option>12级软件2班</option>
									<option>12级软件3班</option>
									<option>12级软件4班</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword3" class="col-sm-3 control-label">密&nbsp;&nbsp;码</label>
							<div class="col-sm-9">
								<input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码">
							</div>
						</div>
						<div class="form-group">
							<label for="inputComfirmPassword" class="col-sm-3 control-label">确认密码</label>
							<div class="col-sm-9">
								<input type="password" class="form-control" id="inputComfirmPassword" placeholder="请输入密码">
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-6 col-md-offset-3">
								<button type="button" class="btn btn-primary btn-block">注&nbsp;&nbsp;册</button>
							</div>
						</div>
					</form>
				</div>
				<div role="tabpanel" class="tab-pane" id="teasign">
					<form class="form-horizontal form-signin" role="form">
						<div class="form-group">
							<label for="inputUsername" class="col-sm-3 control-label">姓&nbsp;&nbsp;名</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" id="inputUsername" placeholder="请输入姓名">
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword3" class="col-sm-3 control-label">密&nbsp;&nbsp;码</label>
							<div class="col-sm-9">
								<input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码">
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-6 col-md-offset-3">
								<button type="button" class="btn btn-primary btn-block">登&nbsp;&nbsp;录</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
    </body>
</html>